{
    "compilerOptions": {
      "module": "ES6",
      "target": "ES5",
      "declaration": true,
      "outDir": "./dist/lib/es6",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "removeComments": true,
      "lib": ["ES2020", "DOM"],
      "sourceMap": true,
    },
    "include": [
      "src/**/*"
    ]
  }